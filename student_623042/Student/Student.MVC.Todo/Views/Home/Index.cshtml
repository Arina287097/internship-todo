@model List<Student.Todo.Models.TodoTask>

@{
    ViewBag.Title = "Список задач";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="m-0">Список задач</h1>
    @Html.ActionLink("Добавить задачу", "Create", null, new { @class = "btn btn-primary" })
</div>

<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>Задача</th>
            <th>Описание</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>
                    @Html.ActionLink("Изменить", "Edit", new { id = task.Id }, new { @class = "btn btn-warning" })
                    @Html.ActionLink("Удалить", "Delete", new { id = task.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>